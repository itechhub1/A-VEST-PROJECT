{
  "name": "aimartavestproject",
  "version": "1.0.0",
  "description": "Aimart Investment Scheme",
  "main": "./build/index.js",
  "files": [
    "build/**/*",
    "client/build/**/*"
  ],
  "scripts": {
    "dev:server": "ts-node-dev --poll src/index.ts",
    "dev:client": "npm start --prefix client",
    "start:dev": "concurrently npm:dev:* ",
    "start": "node build/index.js",
    "clean": "del-cli ./build/*",
    "prod:server": "npm run clean && tsc",
    "prod:client": "npm install --prefix client && npm run build --prefix client ",
    "copy-files": "cp -R ./src/views/ ./build/ && cp -R ./client  ./build/",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install && npm run prod:server  && npm run prod:client && npm run copy-files"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@localmarket/common": "1.0.46",
    "@types/aws-sdk": "^2.7.0",
    "aws-sdk": "^2.843.0",
    "bcrypt": "^5.0.0",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "del-cli": "^3.0.1",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.9.2",
    "global": "^4.4.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "5.10.5",
    "ngrok": "^3.4.0",
    "node-cron": "^2.0.3",
    "nodemailer": "^6.4.17",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "speakeasy": "^2.0.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.9",
    "@types/mongoose": "^5.10.3",
    "@types/node-cron": "^2.0.3",
    "@types/nodemailer": "^6.4.0",
    "@types/speakeasy": "^2.0.5",
    "@types/uuid": "^8.3.0",
    "concurrently": "^6.0.0"
  }
}
